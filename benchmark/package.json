{
  "name": "claude-flow-benchmark",
  "version": "1.0.0",
  "description": "Benchmark system for claude-flow swarm operations",
  "main": "dist/api.js",
  "type": "commonjs",
  "bin": {
    "benchmark": "dist/bin/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "clean": "rimraf dist coverage",
    "prepare": "npm run build",
    "benchmark": "node dist/bin/cli.js",
    "example:basic": "node examples/basic.js",
    "example:advanced": "node examples/advanced.js",
    "example:plugin": "node examples/plugin_example.js",
    "example:test": "node examples/benchmark_test.js",
    "cleanup": "node cleanup.js",
    "cleanup:dry": "node cleanup.js --dry-run",
    "setup": "npm install && npm run build && npm run benchmark -- --help"
  },
  "keywords": [
    "benchmark",
    "claude-flow",
    "swarm",
    "performance",
    "testing"
  ],
  "author": "Claude Flow Team",
  "license": "MIT",
  "dependencies": {
    "async-mutex": "^0.4.0",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "fs-extra": "^11.1.1",
    "luxon": "^3.0.0",
    "ora": "^5.4.1",
    "p-limit": "^3.1.0",
    "ps-tree": "^1.2.0",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "^29.5.3",
    "@types/luxon": "^3.0.0",
    "@types/node": "^20.4.2",
    "@types/ps-tree": "^1.1.2",
    "@types/uuid": "^9.0.2",
    "eslint": "^8.45.0",
    "jest": "^29.6.1",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  }
}